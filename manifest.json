{
  "manifest_version": 3,
  "name": "Diversity Extension",
  "description": "Um jeito novo de quebrar preconceitos e aprender todos os dias",
  "version": "0.1",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "assets/cit.png",
    "default_title": "Diversity extension",
  },
  "icons": {
    "16": "assets/cit.png",
    "32": "assets/cit.png",
    "48": "assets/cit.png",
    "128": "assets/cit.png"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "webRequest",
    "unlimitedStorage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
        "resources": [ "terms.json" ],
        "matches": ["<all_urls>"]
    }
]
}
